<div class="pure-g">

  <div class="pure-u-1-5">
    <a href="{{path('download_post_markdown', {'id': post.id})}}">Download</a>

  </div>

  <div class="pure-u-1-5">

    <form action="{{path('change_post_visibilty_by_id', {'id': post.id})}}">
      <input type="hidden" name="redirect_route" value="{{ app.request.attributes.get('_route') }}">
      <button type="submit" class="minimal green-text">
        {% if post.visible %}
        Hide
        {% else %}
        Show
        {% endif %}
      </button>
    </form>
  </div>

  <div class="pure-u-1-5">
    <a href="{{path('edit_post', {'id': post.id})}}" class="orange-text">Edit</a>
  </div>

  <div class="pure-u-1-5">
    <form action="{{path('remove_post_by_id', {'id': post.id})}}" method="POST">
      <input type="hidden" name="redirect_route" value="{{ app.request.attributes.get('_route') }}">
      <button type="submit" class="minimal red-text">Delete</button>
    </form>

  </div>

</div>
