{{ form_start(form, {'attr': {'class': "pure-form pure-form-stacked"}}) }}

    {{form_row(form.title)}}

    {{form_label(form.content)}}
    {{form_widget(form.content, {'attr': {'class': 'article-textarea'}})}}

    {{form_label(form.date)}}
    {{form_widget(form.date)}}

    {{form_label(form.tags)}}
      {{form_widget(form.tags)}}

  {# Form may have dynamically added elements for POSSE. We can decide to render it here #}
  {% if form.twitter is defined %}
  <label for="write_post_form[twitter]">
   {{form_widget(form.twitter)}} Twitter
  </label>

  {% endif %}

  {% if form.mastodon is defined %}
  <div class="pure-g">
    <div class="pure-u-1-3">
      <label for="write_post_form[mastodon]">
      {{form_widget(form.mastodon)}} Mastodon
    </label>
    </div>
  </div>

  {% endif %}

  <button type="submit" name="submit" class="pure-button pure-button-primary">Post</button>

{{ form_end(form) }}
