{{ form_start(form) }}
<div class="row">
  <div class="input-field">
    {{form_widget(form.title)}}
    {{form_label(form.title)}}
  </div>
</div>

  <div class="row">
    <div class="input-field">
      {{form_widget(form.content)}}
      {{form_label(form.content)}}
    </div>
  </div>

  <div class="row">
    <div class="col s12 m6">
      {{form_label(form.date)}}
      {{form_widget(form.date)}}
    </div>

    <div class="col s12 m6">
      {{form_label(form.tags)}}
      {{form_widget(form.tags)}}
    </div>

  </div>

  {# Form may have dynamically added elements for POSSE. We can decide to render it here #}
  {% if form.twitter is defined %}
    <div class="row">
      <div class="col s6 m3">
        {{form_widget(form.twitter)}}
        {{form_label(form.twitter)}}
      </div>
    </div>
  {% endif %}

  <div class="row">
    <div class="col m4">
      <button type="submit" name="submit" class="btn">Post</button>
    </div>
  </div>

{{ form_end(form) }}
