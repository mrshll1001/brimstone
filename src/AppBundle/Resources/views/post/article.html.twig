<div class="row">
  <h1>{{post.title}}</h1>
  <p >Published {{post.date|date('d M Y')}} {% if profile is defined and profile is not null %}by {{profile.name}}{% endif %}</p>
</div>

<div class="row readable">

  {{post.content|markdown}}
</div>

<div class="row">
  {% for tag in post.tags %}
      <div class="chip">
        {{tag.name}}
      </div>
    {% else %}
        <em>No tags!</em>
  {% endfor %}
</div>
