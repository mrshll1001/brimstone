<div class="row">
  <h1>{{post.title}}</h1>
  <p class="light">Published {{post.date|date('d M Y')}} {% if profile is defined and profile is not null %}by {{profile.name}}{% endif %}</p>
  <p class="light">Available at <a href="{{path('view_article', {'slug': post.slug})}}">{{url('view_article', {'slug': post.slug})}}</a></p>
</div>

<div class="row readable">

  {{post.content|markdown}}
</div>

