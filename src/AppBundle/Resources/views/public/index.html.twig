{% extends 'AppBundle:public:public_base.html.twig' %}

{% block content %}

<div class="container">
  <div class="row">
    {% include 'AppBundle:nav:public_date_navigation.html.twig' %}
  </div>

  <div class="row">
    <div class="col s12 m10 offset-m1">
      {% for post in posts %}
        <div class="row">
          {% include 'AppBundle:post:post_master.html.twig' %}
        </div>
        {% else %}
            <p class="readable">Yikes, looks like there's no posts for that date!</p>
      {% endfor %}
    </div>
  </div>
</div>

{% endblock content %}
