{% extends 'AppBundle:public:public_base.html.twig' %}

{% block content %}

<div class="container">
  <div class="row">
    <h1>Tags:</h1>
  </div>

  <div class="row">
    <div class="col s12 m12">

      {% for tag, count in tags %}
        <div class="chip">
          {{tag}} ({{count}})
        </div>
      {% endfor %}

    </div>
  </div>

  {% if posts is not null %}
  <div class="row">
    <h3>Posts:</h3>
    <p>Showing results for tag search <i>{{search}}</i></p>
  </div>

  <div class="row">
    <div class="col s12 m10 offset-m1">
      {% for post in posts %}
        <div class="row">
          {% include 'AppBundle:post:post_master.html.twig' %}
        </div>
        {% else %}
            <p class="readable">Yikes, looks like there's no posts for that search!</p>
      {% endfor %}
    </div>
  </div>



  {% endif %}

</div>

{% endblock content %}
